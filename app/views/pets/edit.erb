<h1>Update Pet</h1>
<form method="post" action="/pets/<%=@pet.id%>">
<input type="hidden" name="_method" value="PATCH">
    <label> Pet Name:</label>
    <input type="text" id="pet_name" name="pet[name]" value="<%=@pet.name%>" >
    <br>
    <br>
    <% @owners.each do |owner| %>
        <input type="radio" id=<%=owner.id%> name="pet[owner_id]" value="<%=owner.id%>" <%= if owner==@pet.owner then "checked" end %> ><%=owner.name%>
        <br>
    <% end%>
    <br>
    <h2>New Owner</h2>
    <label>Owner Name:</label>
    <input type="text" name="owner[name]" id="owner_name">
    <br>
    <br>
    <input type="submit" value="Update Pet" name="submit">
</form>


